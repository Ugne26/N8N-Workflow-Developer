        "jsCode": "const data = $input.first().json;\nconst totalSpent = data.TotalSpent;\nconst budgetLimit = data.BudgetLimit;\nconst category = data.Category;\nconst spentPercentage = data.SpentPercentage;\n\nlet message = '';\nlet status = '';\nlet alertType = '';\n\nif ($top.portIndex === 0) {\n  const overspend = totalSpent - budgetLimit;\n  message = `üö® Budget Alert: You have overspent by ‚Ç¨${overspend.toFixed(2)}! Total spent: ‚Ç¨${totalSpent.toFixed(2)} of your ‚Ç¨${budgetLimit.toFixed(2)} budget for '${category}' this month.`;\n  status = 'Overspend';\n  alertType = 'Critical';\n} else if ($top.portIndex === 1) {\n  message = `‚ö†Ô∏è Budget Warning: You've spent ‚Ç¨${totalSpent.toFixed(2)} of your ‚Ç¨${budgetLimit.toFixed(2)} budget for '${category}' this month. You are at ${spentPercentage.toFixed(0)}% of your limit.`;\n  status = 'Warning';\n  alertType = 'Warning';\n}\n\nreturn [{ json: { ...data, message, status, alertType, Timestamp: new Date().toISOString() } }];"
